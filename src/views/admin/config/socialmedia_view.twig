{% extends '../../template/base_admin_view.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ baseUrl }}css/admin/landing.css">
{% endblock %}

{% block body %}
<div class="col-md-8 mb-3 ">
    <div class="card h-md-100">
        <div class="card-header d-flex flex-between-center pb-0">
            <h4 class="mb-0">Redes SOciales</h4>
        </div>
        <div class="card-body pt-2">
            <div class="row no-gutters h-100 align-items-center">
                <div class="col">
                    <div class="media align-items-center">
                        <div class="media-body">

                            <div class="fs--2 font-weight-semi-bold">
                                <a href="{{ baseUrl }}#contact" target="_blank" class="btn btn-outline-info">
                                    <i class='bx bx-window-alt'></i> Vista Previa
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4  mb-3 ">
    <div class="card h-md-100">
        <div class="card-header d-flex flex-between-center pb-0">
            <h6 class="mb-0">Horario</h6>
        </div>
        <div class="card-body pt-2">
            <div class="row no-gutters h-100 align-items-center">
                <div class="col">
                    <div class="media align-items-center">
                        <i class='bx bx-time pr-3' style="color: #17a2b8;font-size: 54px;"></i>
                        <div class="media-body">
                            <h6 class="mb-2 horafull"></h6>
                            <div class="fs--2 font-weight-semi-bold">
                                <span class="strFullDate"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 mb-3 ">
    <div class="card h-md-100">
        {# <div class="card-header d-flex flex-between-center pb-0">
            <h6 class="mb-0"></h6>
        </div> #}
        <div class="card-body pt-2">
            <div class="row no-gutters h-100 align-items-center">
                <div class="col">
                    <div class="media align-items-center">
                        <div class="media-body">
                            <div class="row">
                                <div class="col-md-12 pt-3 pb-3">
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    {% for socialmedia in SocialMedia %}
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link {% if loop.first %} active {% endif %}" id="socialmedia{{ socialmedia.id }}" data-toggle="tab" href="#socialmediatab{{ socialmedia.id }}" role="tab" aria-controls="socialmediatab{{ socialmedia.id }}" aria-selected="true">{{ socialmedia.name }}</a>
                                        </li>
                                    {% endfor %}

                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                    {% for socialmedia in SocialMedia %}
                                        <div class="tab-pane fade show {% if loop.first %} active {% endif %}" id="socialmediatab{{ socialmedia.id }}" role="tabpanel" aria-labelledby="socialmedia{{ socialmedia.id }}">
                                            <form class="formsocialmedia row" id="socialmedia{{ socialmedia.id }}" >
                                                <input type="hidden" id="nsocialmedia" required="required" name="nsocialmedia" value="{{ socialmedia.id }}">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="text" id="name" required="required" name="titulo" value="{{ socialmedia.name }}">
                                                        <label for="input" class="control-label">Nombre</label><i class="bar"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="text" id="url" required="required" name="texto" value="{{ socialmedia.url }}">
                                                        <label for="input" class="control-label">URL</label><i class="bar"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <textarea id="tag" name="tag" required="required">{{ socialmedia.tags }}</textarea>
                                                        <label for="textarea" class="control-label">Tag (Username)</label><i class="bar"></i>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <textarea id="html" name="html" required="required">{{ socialmedia.html }}</textarea>
                                                        <label for="textarea" class="control-label">HTML </label><i class="bar"></i>
                                                    </div>
                                                </div>

                                                <div class="col-md-5 self-center m-auto">
                                                    <button type="submit" class="btn btn-info btn-block">Modificar</button>
                                                </div>
                                            </form>
                                        </div>
                                    {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}

    {% block javascripts %}
        <script  type="text/javascript" src="{{ baseUrl }}js/config/socialmedia.js" charset="UTF-8" ></script>
    {% endblock %}
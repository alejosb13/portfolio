{% extends '../../template/base_admin_view.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ baseUrl }}css/admin/landing.css">
{% endblock %}

{% block body %}
<div class="col-md-8 mb-3 ">
    <div class="card h-md-100">
        <div class="card-header d-flex flex-between-center pb-0">
            <h4 class="mb-0">Secci√≥n de Recomendaciones</h4>
        </div>
        <div class="card-body pt-2">
            <div class="row no-gutters h-100 align-items-center">
                <div class="col">
                    <div class="media align-items-center">
                        <div class="media-body">

                            <div class="fs--2 font-weight-semi-bold">
                                <button type="button" class="btn btn-outline-info"><i class='bx bx-window-alt'></i> Vista Previa</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4  mb-3 ">
    <div class="card h-md-100">
        <div class="card-header d-flex flex-between-center pb-0">
            <h6 class="mb-0">Horario</h6>
        </div>
        <div class="card-body pt-2">
            <div class="row no-gutters h-100 align-items-center">
                <div class="col">
                    <div class="media align-items-center">
                        <i class='bx bx-time pr-3' style="color: #17a2b8;font-size: 54px;"></i>
                        <div class="media-body">
                            <h6 class="mb-2 horafull"></h6>
                            <div class="fs--2 font-weight-semi-bold">
                                <span class="strFullDate"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 mb-3 ">
    <div class="card h-md-100">
        {# <div class="card-header d-flex flex-between-center pb-0">
            <h6 class="mb-0"></h6>
        </div> #}
        <div class="card-body pt-2">
            <div class="row no-gutters h-100 align-items-center">
                <div class="col">
                    <div class="media align-items-center">
                        <div class="media-body">
                            <div class="row">
                                <div class="col-md-12 pt-3 pb-3">
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    {% for recomendation in recomendations %}
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link {% if loop.first %} active {% endif %}" id="project{{ recomendation.id }}" data-toggle="tab" href="#projecttab{{ recomendation.id }}" role="tab" aria-controls="projecttab{{ recomendation.id }}" aria-selected="true">{{ recomendation.name }}</a>
                                        </li>
                                    {% endfor %}

                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                    {% for recomendation in recomendations %}
                                        <div class="tab-pane fade show {% if loop.first %} active {% endif %}" id="projecttab{{ recomendation.id }}" role="tabpanel" aria-labelledby="project{{ recomendation.id }}">
                                            <form class="formrecomendation" id="project{{ recomendation.id }}" class="row">
                                                <input type="hidden" id="nrecomendation" required="required" name="nrecomendation" value="{{ recomendation.id }}">
                                                <div class="row m-0">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <input type="text" id="name" required="required" name="name" value="{{ recomendation.name }}">
                                                            <label for="input" class="control-label">Nombre</label><i class="bar"></i>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <input type="text" id="work" required="required" name="work" value="{{ recomendation.work }}">
                                                            <label for="input" class="control-label">Empresa Actual</label><i class="bar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row m-0">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <textarea id="dateworkIni" name="date" required="required">{{ recomendation.dateworkIni }}</textarea>
                                                            <label for="textarea" class="control-label">Cuando Trabajaron Juntos</label><i class="bar"></i>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <textarea id="comment" name="comment" required="required">{{ recomendation.comment }}</textarea>
                                                            <label for="textarea" class="control-label">Comentario</label><i class="bar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group mt-0">
                                                        <h5 class="mb-0">Fondo</h5>
                                                        <img src="{{ baseUrl ~ "img/uploads/recomendations/" ~ recomendation.img }}" class="img-banner" alt="" style="max-width: 120px;">
                                                        <label class='__lk-fileInput'>
                                                            <span data-default='Selecciona una imagen'>Selecciona una imagen</span>
                                                            <input type="file" id="image">
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-5 self-center m-auto">
                                                    <button type="submit" name="" id="" class="btn btn-info btn-block">Modificar</button>
                                                </div>
                                            </form>
                                        </div>
                                    {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}

    {% block javascripts %}
        <script  type="text/javascript" src="{{ baseUrl }}js/landing/recomendation.js" charset="UTF-8" ></script>
    {% endblock %}
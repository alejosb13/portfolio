                        <p class="card-text">Content</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 
<section class="four carousel-recomendations" id="recommendations" >
    <h2>Recommendations</h2>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for recommendation in recommendations %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %} active {% endif %}"></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner">
            {% for recommendation in recommendations %}
            <div class="carousel-item {% if loop.first %} active {% endif %} ">
                <div class="recomendacion container">
                    <img src="{{recommendation.img }}" class="d-block w-100" alt="..."> 
                    <span class="name">{{ recommendation.name }}</span>
                    <span class="work">{{ recommendation.work }}</span>
                    <span class="dateWorkIni">{{ recommendation.dateWorkIni }}</span>
                    <span class="comment">
                        <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                        {{ recommendation.comment }}
                        <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                    </span>
                </div>
            </div>
            {% endfor %}

            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev"></a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next"></a>
      </div>
</section>
<section class="five form-contact" id="contact">
    <div class="container">
        <h2 >Contact us</h2>
        <div class="row">
            <div class="col-lg-4 col-md-12 d-flex align-items-center">
                <div class="info">
                    <div class="address">
                        <i class='bx bxs-map' ></i>
                      <h4>Location:</h4>
                      <p>A108 Adam Street, New York, NY 535022</p>
                    </div>
      
                    <div class="email">
                        <i class='bx bx-envelope' ></i>
                      <h4>Email:</h4>
                      <p>info@example.com</p>
                    </div>
      
                    <div class="phone">
                        <i class='bx bx-phone' ></i>
                      <h4>Call:</h4>
                      <p>+1 5589 55488 55s</p>
                    </div>
      
                  </div>
            </div>
            <div class="col-lg-8 col-md-12">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" required="required" name="name" />
                                <label for="input" class="control-label">Name</label><i class="bar"></i>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" required="required" name="email"  />
                                <label for="input" class="control-label">Email</label><i class="bar"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" required="required" name="phone" />
                                <label for="input" class="control-label">Phone</label><i class="bar"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea required="required" name="message"></textarea>
                                <label for="textarea" class="control-label">Your message</label><i class="bar"></i>
                            </div>
                        </div>
                    </div>
                    

                </form>
            </div>
            <div class="button-container">
                <button type="button" class="button"><span>Submit</span></button>
            </div>
        </div>
    </div>
</section>
